@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<p>You must have at least one stylist before attempting to add clients!</p>
<p>Go  @Html.ActionLink("here", "Create", "Stylists") to create a stylist entry.</p>

<h4>Add a new client</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    
    <input type="submit" value="Add new client for this stylist" />
}
<p>@Html.ActionLink("Show all", "Index")</p>